<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_actionbar_height"
    android:background="@color/app_main_color">


    <LinearLayout
        android:id="@+id/rightBtn"
        android:layout_width="@dimen/x44"
        android:layout_height="@dimen/x44"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/right_btn_img"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/x18"
            android:src="@drawable/ico_scan_code" />


    </LinearLayout>


    <TextView
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_actionbar_height"
        android:layout_marginLeft="@dimen/x44"
        android:layout_toLeftOf="@id/rightBtn"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/app_main_title_color"
        android:textSize="@dimen/f18" />


</RelativeLayout>